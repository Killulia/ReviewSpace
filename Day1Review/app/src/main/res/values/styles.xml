<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#a35252</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:shadowColor">#218e5d</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="SeekBarNormal" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@mipmap/seek_thumb</item>
        <item name="android:minHeight">8.0dp</item>
        <item name="android:minWidth">8.0dp</item>
        <item name="android:thumbOffset">10.0dp</item>
    </style>
    <style name="RatingBarNormal" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_ratingbar_normal</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

</resources>
