<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape 
            android:shape="rectangle">
            <solid 
                android:color="@color/blue"/>
            <stroke 
                android:width="1dp"
                android:color="@color/light_blue"/>
            <corners 
                android:radius="6dp"/>
        </shape>
    </item>
	<item android:state_enabled="false">
        <shape 
            android:shape="rectangle">
            <solid 
                android:color="@color/m_light_blue"/>
            <stroke 
                android:width="1dp"
                android:color="@color/light_blue"/>
            <corners 
                android:radius="6dp"/>
        </shape>
	</item>
	<item>
        <shape 
            android:shape="rectangle">
            <solid 
                android:color="#90C0F4"/>
            <stroke 
                android:width="1dp"
                android:color="#7AB3F0"/>
            <corners 
                android:radius="6dp"/>
        </shape>
	</item>
</selector>
